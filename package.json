{
  "name": "@netology-group/wc-chat",
  "version": "0.4.1",
  "description": "Messenger's webcomponents",
  "bugs": {
    "url": "https://github.com/netology-group/wc-chat/issues"
  },
  "repository": {
    "url": "https://github.com/netology-group/wc-chat"
  },
  "license": "MIT",
  "author": "",
  "files": [
    "dist",
    "es",
    "lib"
  ],
  "main": "dist/chat.min.js",
  "directories": {
    "lib": "src"
  },
  "scripts": {
    "prebuild": "rm -rf dist es lib public/node_modules",
    "build": "npm run build:cjs && npm run build:es && npm run build:umd && npm run build:umd:min && npm run build:polyfill && npm run build:polyfill:min",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src -d lib --copy-files",
    "build:es": "cross-env BABEL_ENV=es babel src -d es --copy-files",
    "build:polyfill": "npm run rollup -- rollup.polyfill.js -o dist/polyfill.js",
    "build:polyfill:min": "cross-env NODE_ENV=production npm run rollup -- rollup.polyfill.js -o dist/polyfill.min.js",
    "build:umd": "npm run rollup -- -o dist/chat.js",
    "build:umd:min": "cross-env NODE_ENV=production npm run rollup -- -o dist/chat.min.js",
    "demo": "http-server . -p ${DEMO_PORT:-9090}",
    "prepublishOnly": "npm run test && npm run build",
    "rollup": "cross-env BABEL_ENV=rollup rollup -c",
    "prestart": "npm run build",
    "start": "npm run demo",
    "stylelint": "stylelint src",
    "test": "eslint . && npm run stylelint"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ],
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "order/order": [
        "dollar-variables",
        "custom-properties",
        "at-variables",
        "declarations",
        "rules",
        "at-rules"
      ],
      "order/properties-alphabetical-order": false
    }
  },
  "dependencies": {
    "@netology-group/wc-reaction": "^0.2.0",
    "@netology-group/wc-utils": "^0.2.1",
    "@polymer/iron-autogrow-textarea": "^3.0.0-pre.21",
    "@polymer/lit-element": "^0.5.2",
    "@webcomponents/custom-elements": "^1.2.0",
    "@webcomponents/webcomponentsjs": "^2.1.2",
    "core-js": "^2.5.7",
    "intl-messageformat": "~2.2.0",
    "invariant": "^2.2.4",
    "most": "^1.7.3",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "autoprefixer": "^9.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-annotate-pure-calls": "^0.3.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "cross-env": "^5.2.0",
    "eslint-config-adequate": "^1.1.1",
    "postcss-fontpath": "^1.0.0",
    "postcss-import": "^12.0.0",
    "postcss-preset-env": "^5.2.2",
    "postcss-url": "^8.0.0",
    "rollup": "^0.62.0",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-svg": "^1.0.1",
    "rollup-plugin-uglify": "^4.0.0",
    "stylelint": "^9.5.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^1.0.0"
  }
}
